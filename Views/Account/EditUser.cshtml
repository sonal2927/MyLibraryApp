@model LibraryManagementSystem.Models.User
@{
    ViewData["Title"] = "Edit User";
    var books = ViewBag.Books as List<string>;
}

<div class="container mt-5">
    <h2 class="text-center text-warning"><i class="fa-solid fa-user-pen"></i> Edit @Model.FullName's Info</h2>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="LibraryId" />
        <input type="hidden" asp-for="Role" />

        <div class="row mt-4">
            <div class="col-md-6">
                <h5>Personal Details</h5>

                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-select" required>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Department</label>
                    <select asp-for="Department" class="form-select" required>
                        <option>CSE</option>
                        <option>IT</option>
                        <option>Chemical</option>
                        <option>Mechanical</option>
                        <option>Electrical</option>
                        <option>Civil</option>
                        <option>Library</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <h5>Issued Books</h5>
                <ul class="list-group">
                    @if (books != null && books.Any())
                    {
                        foreach (var book in books)
                        {
                            <li class="list-group-item">@book</li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No books issued.</li>
                    }
                </ul>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success me-2">ðŸ’¾ Save</button>
            <a href="@Url.Action("UserDetails", "Account", new { id = Model.LibraryId })" class="btn btn-secondary">â†© Cancel</a>
        </div>
    </form>
</div>
