@model List<LibraryManagementSystem.Models.User>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Department</td>
                    <td>
                        <form asp-action="ApproveUser" method="post" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-sm btn-success">âœ… Approve</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No users pending approval in this category.</p>
}
