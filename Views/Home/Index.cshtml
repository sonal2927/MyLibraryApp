@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero {
    background: linear-gradient(to right, #a5b4fc, #f0abfc); /* pastel indigo to pink-lavender */
    color: white;
    padding: 80px 20px;
    text-align: center;
}


      .hero .btn {
    background-color: #a5b4fc;
    color: #1f1f1f;
    font-weight: 600;
    padding: 12px 30px;
    border-radius: 40px;
    border: none;
    transition: all 0.3s ease-in-out;
}

.hero .btn:hover {
    background-color: #818cf8; /* slightly darker indigo */
    color: white;
}

        .stat-box {
            border-radius: 15px;
            padding: 20px;
            background-color: #f8f9fa;
            text-align: center;
        }

        .nav-card {
            transition: 0.3s;
        }

        .nav-card:hover {
            transform: scale(1.05);
        }
    </style>
}

<div class="container-fluid px-0">
   <!-- Hero Banner -->
    <section class="hero pastel-hero mb-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to SVMIT College Digital Library 📚</h1>
            <p class="lead">Access thousands of books, journals, and learning resources — anytime, anywhere.</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-dark btn-lg mt-3">Login</a>
        </div>
    </section>

     <!-- Announcements -->
    <section style="background-color: #fde047; color: #1f1f1f;" class="py-4">
        <div class="container text-center">
            <strong>📢 Announcement:</strong> Library will remain closed on 10th July due to Book Fair. Check updated timings on the notice board.
        </div>
    </section>

    <!-- About Section -->
    <section class="container my-5">
        <div class="row text-center">
            <div class="col-md-4">
                <h3>📖 About the Library</h3>
                <p>Our library supports students and faculty with a rich collection of resources across all departments.</p>
            </div>
            <div class="col-md-4">
                <h3>🎓 Who Can Access</h3>
                <p>Students, Faculty, and Staff of SVMIT College can explore, request, and issue books through this platform.</p>
            </div>
            <div class="col-md-4">
                <h3>✨ Key Features</h3>
                <p>Online Book Search, Issue Tracking, Request Management, Notifications, and more.</p>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>📚 5,000+</h2>
                        <p>Total Books</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>👩‍🎓 1,200+</h2>
                        <p>Registered Users</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>📂 15+</h2>
                        <p>Categories</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-box">
                        <h2>🕐 9 AM – 5 PM</h2>
                        <p>Library Timings</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Navigation Cards -->
    <section class="container my-5">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card nav-card shadow">
                    <div class="card-body">
                        <h4>🔍 Explore Books</h4>
                        <p>Browse books by category and availability.</p>
                        <a href="@Url.Action("Index", "Books")" class="btn btn-primary btn-sm">Go to Books</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card nav-card shadow">
                    <div class="card-body">
                        <h4>🔐 Login</h4>
                        <p>Login as Student, Faculty, Librarian or Admin.</p>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-sm">Login Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card nav-card shadow">
                    <div class="card-body">
                        <h4>📞 Contact Helpdesk</h4>
                        <p>Have a question? Reach out to us for support.</p>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-info btn-sm">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
