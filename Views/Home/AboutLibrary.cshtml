@{
    ViewData["Title"] = "About Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .about-hero {
            background: linear-gradient(to right, #8e2de2, #4a00e0);
            color: white;
            padding: 60px 20px;
            text-align: center;
        }

        .about-section {
            padding: 60px 20px;
        }

        .info-box {
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }

        .info-box:hover {
            transform: translateY(-5px);
        }

        .info-box h4 {
            color: #4a00e0;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .info-box ul {
            padding-left: 20px;
        }

        .info-box ul li {
            margin-bottom: 10px;
        }

        .icon {
            font-size: 1.5rem;
            margin-right: 10px;
            color: #4a00e0;
        }

        .section-title {
            font-size: 1.25rem;
        }
    </style>
}

