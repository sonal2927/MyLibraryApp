@model LibraryManagementSystem.Models.BookRequest
@{
    ViewData["Title"] = "Request a Book";
}

<h2>ðŸ“© Request a Book</h2>

<p>Use this form to request a book you want to borrow or suggest for the library.</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="RequestBook" method="post">
    <div class="form-group">
        <label>Book Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Author Name</label>
        <input asp-for="Author" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Publisher</label>
        <input asp-for="Publisher" class="form-control" />
    </div>
    <div class="form-group">
        <label>Published Year</label>
        <input asp-for="PublishedYear" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select asp-for="Category" class="form-control" required>
            <option>Computer Science</option>
            <option>Science</option>
            <option>Literature</option>
            <option>Commerce</option>
            <option>Other</option>
        </select>
    </div>
    <div class="form-group">
        <label>Reason or Message</label>
        <textarea asp-for="Message" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">ðŸ“¨ Submit Request</button>
</form>
